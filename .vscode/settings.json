{
  "editor.rulers": [80],
  "editor.formatOnSave": true,
  "prettier.tabWidth": 2,
  "editor.tabSize": 2,
  "editor.formatOnSaveTimeout": 1500,
  "editor.snippetSuggestions": "top",
  "peacock.color": "magenta",
  "workbench.colorCustomizations": {
    "titleBar.activeBackground": "#ff00ff",
    "titleBar.inactiveBackground": "#ff00ff99",
    "titleBar.activeForeground": "#393939",
    "titleBar.inactiveForeground": "#393939",
    "statusBar.background": "#ff00ff",
    "statusBarItem.hoverBackground": "#ff00ff",
    "statusBar.foreground": "#393939"
  },
  "peacock.affectActivityBar": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  }
}
